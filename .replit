modules = ["php-8.2", "web", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["php82", "php82Extensions.pdo_mysql", "php82Extensions.mbstring", "php82Extensions.openssl", "php82Extensions.curl", "php82Extensions.zip"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34563
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Fleet Manager"

[[workflows.workflow]]
name = "Fleet Manager"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd framework && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd framework && php artisan serve --host=0.0.0.0 --port=5000"]
